@model FrontedByRezorView.ModelViews.SettingsViewModel

<h2>Email Settings</h2>

<form asp-action="SaveSettings" method="post">
    <input type="hidden" name="category" value="Email" />
    <div class="form-group">
        <label for="Email_Address">Email Address</label>
        <input type="text" class="form-control" name="Settings[Email_Address]" value="@Model.Settings["Email_Address"]" />
    </div>

    <div class="form-group">
        <label for="Email_Name">Email Name</label>
        <input type="text" class="form-control" name="Settings[Email_Name]" value="@Model.Settings["Email_Name"]" />
    </div>

    <div class="form-group">
        <label for="Email_Contact">Email Contact</label>
        <input type="text" class="form-control" name="Settings[Email_Contact]" value="@Model.Settings["Email_Contact"]" />
    </div>
    <div class="form-group">
        <label for="Email_PersonName">Email PersonName</label>
        <input type="text" class="form-control" name="Settings[Email_PersonName]" value="@Model.Settings["Email_PersonName"]" />
    </div>
    <button type="submit" class="btn btn-primary">Save Settings</button>
</form>
