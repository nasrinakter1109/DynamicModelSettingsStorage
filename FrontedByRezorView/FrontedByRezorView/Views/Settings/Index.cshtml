@model FrontedByRezorView.ModelViews.SettingsViewModel

<h2>Company Profile Settings</h2>

<form asp-action="SaveSettings" method="post">
    <!-- Hidden input to pass category to the controller -->
    <input type="hidden" name="category" value="CompanyProfile" />

    <div class="form-group">
        <label for="CompanyProfile_companyName">Company Name</label>
        <input type="text" class="form-control" name="Settings[CompanyProfile_companyName]"
               value="@(Model.Settings.ContainsKey("CompanyProfile_companyName") ? Model.Settings["CompanyProfile_companyName"] : string.Empty)" />
    </div>

    <div class="form-group">
        <label for="CompanyProfile_companyAddress">Company Address</label>
        <input type="text" class="form-control" name="Settings[CompanyProfile_companyAddress]"
               value="@(Model.Settings.ContainsKey("CompanyProfile_companyAddress") ? Model.Settings["CompanyProfile_companyAddress"] : string.Empty)" />
    </div>

    <div class="form-group">
        <label for="CompanyProfile_companyContact">Company Contact</label>
        <input type="text" class="form-control" name="Settings[CompanyProfile_companyContact]"
               value="@(Model.Settings.ContainsKey("CompanyProfile_companyContact") ? Model.Settings["CompanyProfile_companyContact"] : string.Empty)" />
    </div>

    <button type="submit" class="btn btn-primary">Save Settings</button>
</form>
